@using cloudscribe.Pagination.Models
@model PagedResult<ProductViewModel>
@{
    ViewData["Title"] = "Home Page";
    ViewData["Controller"] = "Home";
    ViewData["Action"] = "Products";
}

@*<style>
    .container {
        padding: 1rem 0rem;
    }

    h4 {
        margin: 1.5rem 0rem 0.5rem;
    }
</style>*@

<div>
    <partial name ="_PaginationPartial" model="Model" view-data="ViewData" />
</div>

<div class="container">
    <div class="row">
        <div class="col-12">
            <div class="card-body">
                @{
                    <table id="userGrid" class="table table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Category</th>
                                <th>Name</th>
                                <th>Price</th>
                                <th>Description</th>
                                <th>Created</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var product in Model.Data)
                            {
                                <tr>
                                    <th width="60px" scope="row">@(product.Id)</th>
                                    <td>@(product.CategoryId)</td>
                                    <td>@(product.Name)</td>
                                    <td>@(product.Price)</td>
                                    <td>@(product.Description)</td>
                                    <td>@(product.Created)</td>
                                    <td width="120px">
                                        <a asp-action="UpdateProduct" asp-controller="Home" asp-route-id="@(product.Id)" class="btn btn-primary"><i class="fas fa-edit"></i></a>
                                        <a asp-action="DeleteProduct" asp-controller="Home" asp-route-id="@(product.Id)" class="btn btn-danger"><i class="far fa-trash-alt"></i></a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <a class=" btn btn-success" asp-controller="Home" asp-action="CreateProduct">Add new product</a>
                }
            </div>
        </div>
    </div>
</div>