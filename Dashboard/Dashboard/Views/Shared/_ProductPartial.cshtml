<input hidden="hidden" value="@(Model.Id)" id="cur_id" name="cur_id" />
<div class="form-group">
    <label for="name">Name</label>
    <input type="text" class="form-control" id="name" name="name" placeholder="0.0" required>
</div>
<div class="form-group">
    <label for="price">Price</label>
    <input type="text" pattern="[0-9]*\.?[0-9]{1,28}" class="form-control" id="price" name="price" value="@(Model.Price!=(decimal)0.0?Model.Price:null)" placeholder="0.0" required>
</div>
<div class="form-group">
    <label for="categoryId">Select category</label>
    <select class="form-control" id="categoryId" name="categoryId" required>
        @{
            @foreach (var category in Model.AvailableCategories)
            {
                @if (category.Id == Model.CategoryId)
                {
                    <option selected="selected" value="@(category.Id)">@(category.Name)</option>
                }
                else
                {
                    <option value="@(category.Id)">@(category.Name)</option>
                }
            }
        }
    </select>
</div>
<div class="form-group">
    <label for="description">Description</label>
    <textarea class="form-control" id="description" name="description" rows="3">@(Model.Description != "" ? Model.Description : "")</textarea>
</div>
@if (Model.AvailableCategories.Count != 0)
{
    <button type="submit" class="btn btn-primary">Save changes</button>
}
else
{
    <button type="button" class="btn btn-primary" onclick="show()">Save changes</button>
}
